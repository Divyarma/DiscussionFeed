<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="10dp"
    app:cardElevation="30dp"
    app:cardCornerRadius="40dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_pp_item"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tv_username_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_postTime_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/tv_postClass_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_QuestionPost_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="10dp"
            android:textColor="#148DEA"
            android:text="Question" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_liked" />

            <ImageView
                android:id="@+id/btn_answer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_reply_24" />
            <ImageView
                android:id="@+id/btn_report"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_report_24" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>