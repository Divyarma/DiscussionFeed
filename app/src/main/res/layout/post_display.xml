<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_pp_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_face_24" />

            <TextView
                android:id="@+id/tv_username_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_postTime_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="5sp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/tv_postClass_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="5sp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_QuestionPost_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#148DEA"
            android:text="Question" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D4E7F6">

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_liked" />

            <ImageView
                android:id="@+id/btn_answer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_reply_24" />
            <ImageView
                android:id="@+id/btn_report"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_report_24" />

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/edit" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:visibility="gone"
            android:layout_margin="3dp">

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint="Answer"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/post_answer"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_postAns"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>